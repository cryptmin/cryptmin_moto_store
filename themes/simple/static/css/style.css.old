header {
    text-shadow: 1px 1px 0 black;
}

body {
    font-family: 'Raleway';
    font-size: 22px;
}

li.nav-item {
    font-family: 'Racing Sans One';
    font-size: 13px;
    background-color: #4CAF50;
    margin-right: 1px;
    margin-left: 1px;
    border-radius: 5%;
}

img.b-lazy {
    border-radius: 5%;
    width: 80%;
    height: 80%;
    margin-top: 10px;
    margin-bottom: 10px;
    margin-right: 10px;
    margin-left: 10px;
}

button.snipcart-add-item {
  border-radius: 5%;
  margin-left: 10px;
  background-color: #4CAF50; /* Green */
  border: none;
  color: white;
  padding: 15px 32px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
}
